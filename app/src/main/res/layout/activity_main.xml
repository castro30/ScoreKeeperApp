<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e5f5"
    android:orientation="horizontal"
    tools:context="com.example.android.scorekeeperapp.MainActivity">

    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/TeamA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="30sp"
            android:text="TeamA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/team_a_score"
            android:textSize="50sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outs:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/team_a_outs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="50sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_orange_light"
            android:textSize="20sp"
            android:onClick="runsForA"
            android:text="RUNS" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:onClick="outsForA"
            android:background="@android:color/holo_orange_light"
            android:text="OUTS" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/TeamB">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="30sp"
            android:text="TeamB" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="50sp"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outs:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/team_b_outs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="50sp"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:onClick="runsForB"
            android:background="@android:color/holo_orange_light"
            android:text="RUNS" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:onClick="outsForB"
            android:background="@android:color/holo_orange_light"
            android:text="OUTS" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:onClick="resetAllPoints"
            android:text="Reset"
            android:padding="20dp"
            android:background="@android:color/holo_orange_light"/>
    </LinearLayout>
</RelativeLayout>
